@model ClassPackage;
<div class="container-fluid">
    <div class="row" style="margin-bottom:10px;">
        <div class="col-lg-4 col-md-4" style="padding-left: 11px;">
            <h3 style="margin:0px;margin-top:6px;">Add Class Package</h3>
        </div>
        <div class="col-lg-4 col-md-4">
        </div>
        <div class="col-lg-4 col-md-4">
            <button data-toggle="modal" data-target="#modal-warning" data-backdrop="false" type="button" class="btn btn-block btn-primary " style="float:right;max-width:180px;"><i class="fa fa-angle-double-left"></i> Back to Class Packages</button>
        </div>
    </div>
    <div class="row">
        <form id="EditClassPackageForm" role="form">
            <input type="hidden" id="classPackageID" name="classPackageID" value="@Model.ClassPackageID" />
            <div class="box-body">
                <h4><span class="label label-danger">Class Package Information</span></h4>
                <ul class="list-group">
                    <li class="list-group-item">
                        <div class="form-group row">
                            <div class="col-lg-3 col-md-4">
                                <label for="classPackageName">Class Package Name</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-ticket"></i></span>
                                    <input type="text" class="form-control" id="classPackageName" name="classPackageName" placeholder="Enter Class Package Name" value="@Model.ClassPackageName">
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4">
                                <label for="expirationDate">Expiration Date</label>
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="expirationDate" name="expirationDate" placeholder="Enter Expiration Date" value="@Model.ExpirationDate.Date.ToString("yyyy-MM-dd")">
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-6 col-md-8">
                                <label for="description">Description</label>
                                <textarea class="form-control" rows="7" id="classPackageDescription" name="classPackageDescription" placeholder="Enter Description">@Model.ClassPackageDescription</textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3 col-md-4">
                                <label for="price">Price</label>
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-dollar"></i></span>
                                    <input type="text" class="form-control" id="price" name="price" placeholder="Enter Price" value="@Model.Price">
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4">
                                <label for="badge">Badge</label>
                                <input type="text" class="form-control" id="badge" name="badge" placeholder="Enter Badge" value="@Model.Badge">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2 col-md-3">
                                <label for="classCount">Class Count</label>
                                <input type="text" class="form-control" id="classCount" name="classCount" required placeholder="Enter Class Count" value="@Model.ClassCount">
                            </div>
                            <div class="col-lg-2 col-md-3">
                                <label for="sortOrder">Sort Order</label>
                                <input type="text" class="form-control" id="sortOrder" name="sortOrder" placeholder="Enter Sort Order" value="@Model.SortOrder">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-2 col-md-4">
                                <div class="checkbox icheck">
                                    <label asp-for="IsActiveFlag">
                                        <input asp-for="IsActiveFlag" />Is Active ?
                                    </label>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-4">
                                <div class="checkbox icheck">
                                    <label asp-for="IsFeaturedFlag">
                                        <input asp-for="IsFeaturedFlag" />Is Featured ?
                                    </label>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="button" class="btn btn-info" data-toggle="modal" data-target="#modal-info"><i class="fa fa-save"></i> Save Details</button>
            </div>
        </form>
    </div>
</div>
<div class="modal modal-warning fade" id="modal-warning">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Attention!</h4>
            </div>
            <div class="modal-body">
                <h4>Are you sure you want to go back to Locations Page ?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline pull-left" data-dismiss="modal"><i class="fa fa-times-circle"></i><div>No</div></button>
                <button id="BackToClassPackages" type="button" data-dismiss="modal" class="btn btn-outline"><i class="fa fa-check-circle"></i><div>Yes</div></button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal modal-info fade" id="modal-info">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Update Class Package Confirmation</h4>
            </div>
            <div class="modal-body">
                <h4>Do you want to verify the information, or continue saving the changes?</h4>
            </div>
            <div class="modal-footer">
                <button type="button" id="VerifyBtn" class="btn btn-outline pull-left" data-dismiss="modal"><i class="fa  fa-angle-double-left"></i><div>Verify</div></button>
                <button id="SaveClassPackage" type="button" class="btn btn-outline"><i class="fa fa-check"></i><div>Save changes</div></button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<script type="text/javascript" src="~/lib/admin-lte/plugins/input-mask/jquery.inputmask.js"></script>
<script type="text/javascript" src="~/lib/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        //Date picker
        $('#expirationDate').datepicker({
            autoclose: true,
            format: "yyyy-mm-dd"
        });
        //iCheck for checkbox and radio inputs
        $('input[type="checkbox"], input[type="radio"]').iCheck({
            checkboxClass: 'icheckbox_square-red',
            radioClass: 'iradio_square-red',
        });
        $("#BackToClassPackages").click(function () {
            $.ajax({
                url: "@Url.Action("classpackages", "admin")",
                success: function (data) {
                    $('body').removeClass('modal-open');
                    $("body").css("padding-right", "0px");
                    $(".modal-backdrop").remove();
                    $("#classPackages").html(data);
                }
            });
        });

        $("#SaveClassPackage").click(function () {
            $("#VerifyBtn").attr("disabled", "disabled");
            $("#SaveClassPackage").attr("disabled","disabled");
            $("#SaveClassPackage i").removeClass("fa-check");
            $("#SaveClassPackage i").addClass("fa-spinner fa-pulse fa-fw");
            $("#SaveClassPackage div").text("Saving Changes");
            $.ajax({
                url: "@Url.Action("updateClassPackage", "admin")",
                method: 'POST',
                data: $('#EditClassPackageForm').serialize(),
                async: true,
                success: function (data) {
                    if (data == true) {
                        $("#SaveLocation i").removeClass("fa-spinner fa-pulse fa-fw");
                        $("#SaveLocation i").addClass("fa-check");
                        $("#SaveLocation div").text("Saved Changes");
                        $("#SaveLocation").removeAttr("disabled");
                        $("#VerifyBtn").removeAttr("disabled");
                        setTimeout(function () {
                            $.ajax({
                                url: "@Url.Action("classpackages", "admin")",
                                success: function (data) {
                                    $('body').removeClass('modal-open');
                                    $("body").css("padding-right","0px");
                                    $(".modal-backdrop").remove();
                                    $("#classPackages").html(data);
                                }
                            });
                        }, 2000);

                    }
                }
            });
        });
    });
</script>